{% extends 'base.html.twig' %}

{% block title %}Payment Controller{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="example-wrapper">
        <a href="{{ path('app_admin_payment_create') }}">Create</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Active</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for payment in payments %}
                    <tr>
                        <td scope="row">{{ payment.getId() }}</td>
                        <td>{{ payment.getName() }}</td>
                        <td>{{ payment.getType() }}</td>
                        <td>{{ payment.isActive() ? 'active' : 'not active' }}</td>
                        <td>
                            <a href="{{ path('app_admin_payment_delete', { 'id': payment.getId() }) }}">DELETE</a>
                            <a href="{{ path('app_admin_payment_update', { 'id': payment.getId() }) }}">UPDATE</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h2>Categories</h2>
    {% for category in categories %}
        {% include 'partials/category_thumbnail.html.twig' with {'category': category} %}
    {% endfor %}

    <h2>Products</h2>
    {% for product in products %}
        {% include 'partials/product_thumbnail.html.twig' with {'product': product} %}
    {% endfor %}

    <h2>Manufacturers</h2>
    {% for manufacturer in manufacturers %}
        {% include 'partials/manufacturer_thumbnail.html.twig' with {'manufacturer': manufacturer} %}
    {% endfor %}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Attatchment Controller{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="example-wrapper">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">File Name</th>
                    <th scope="col">File</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for attatchment in attatchments %}
                    <tr>
                        <th scope="row">{{ attatchment.getId() }}</th>
                        <td>{{ attatchment.getFileName() }}</td>
                        <td>{{ attatchment.getFullPath() ~ '.' ~ attatchment.getType() }}</td>
                        <td>
                            <a href="{{ path('app_admin_attatchment_delete', { 'id': attatchment.getId() }) }}">DELETE</a>
                            <a href="{{ path('app_admin_attatchment_update', { 'id': attatchment.getId() }) }}">UPDATE</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

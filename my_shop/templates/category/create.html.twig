{% extends 'base.html.twig' %}

{% block title %}Category Controller{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h1>Category Create</h1>

    {{ form_errors(categoryCreateForm) }}

    {{ form_start(categoryCreateForm) }}
        {{ form_widget(categoryCreateForm) }}

        <button type="submit" class="btn">Create</button>
    {{ form_end(categoryCreateForm) }}
{% endblock %}
